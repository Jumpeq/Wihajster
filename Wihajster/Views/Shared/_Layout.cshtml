<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wihajster</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Wihajster", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("O nas", "About", "Home")</li>
                <li>@Html.ActionLink("Galeria", "Index", "Picture")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Pracownia <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Antyki", "Index", "Antyki", null, new { id = "Antyki" })</li>
                        <li>@Html.ActionLink("Bibeloty", "Index", "Bibeloty", null, new { id = "Bibeloty" })</li>
                        <li>@Html.ActionLink("Oświetlenie", "Index", "Oświetlenie", null, new { id = "Oświetlenie" })</li>
                        <li>@Html.ActionLink("Meble", "Index", "Meble", null, new { id = "Meble" })</li>

                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Sklep <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Pracownia", "Index", "Category", null, new { id = "Antyki" })</li>
                        <li>@Html.ActionLink("Antyki", "Index", "Antyki", null, new { id = "Antyki" })</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Logowanie", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content" style="margin-top: 20px">
    @RenderBody()
    <hr />
    @*<footer>
        <p>&copy; @DateTime.Now.Year - Wszelkie prawa zastrzeżone</p>
    </footer>*@
    <footer>
        <div class="navbar navbar-default">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-push-8">
                        @*<ul class="nav navbar-nav sc-center">
                        </ul>*@
                    </div>
                    <div class="col-md-8 col-md-pull-4">
                        <p class="navbar-text sc-center">
                            © @DateTime.Now.Year - Wszelkie prawa zastrzeżone
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
