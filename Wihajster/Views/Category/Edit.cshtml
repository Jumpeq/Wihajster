@model Wihajster.Models.Category

@{
    ViewBag.Title = "Edytuj";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <dl class="dl-horizontal">
            <dt style="margin-bottom: 5px">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.DisplayFor(model => model.CategoryId)
            </dd>

            <dt style="margin-bottom: 5px">
                Kategoria
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </dd>

            <dt style="margin-bottom: 5px">
                Nazwa
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </dd>

            <dt style="margin-bottom: 5px">
                Zdjęcie główne
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.EditorFor(model => model.MainPicture, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainPicture, "", new { @class = "text-danger" })
            </dd>

            <dt style="margin-bottom: 5px">
                Opis
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </dd>

            <dt style="margin-bottom: 5px">
                Cena
            </dt>

            <dd style="margin-bottom: 5px">
                @Html.EditorFor(model => model.Prize, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prize, "", new { @class = "text-danger" })
            </dd>
        </dl>
        
        <div>
            @Html.ActionLink("Dodaj zdjęcia", "CreateMany", "Category", null, new { @class = "btn btn-primary" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
